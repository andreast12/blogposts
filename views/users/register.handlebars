<form method="post" class="w-50 m-auto mt-5 border border-2 p-4">
  <h2 class="text-center">Register</h2>
  {{#if errorMsg}}
    <div class="alert alert-danger" role="alert">{{errorMsg}}</div>
  {{/if}}
  <div class="mb-3">
    <label for="inputName" class="form-label">Name</label>
    <input type="text" class="form-control" id="inputName" name="name" {{#if name}}value="{{name}}" {{/if}} required>
  </div>
  <div class="mb-3">
    <label for="inputEmail" class="form-label">Email address</label>
    <input type="email" class="form-control" id="inputEmail" name="email" {{#if email}}value="{{email}}" {{/if}}
      required>
  </div>
  <div class="mb-3">
    <label for="inputPassword" class="form-label">Password</label>
    <input type="password" class="form-control" id="inputPassword" name="password" {{#if password}}value="{{password}}"
      {{/if}}required>
  </div>
  <div class="mb-3">
    <label for="inputConfirmPassword" class="form-label">Confirm Password</label>
    <input type="password" class="form-control" id="inputConfirmPassword" name="confirmPassword" {{#if
      confirmPassword}}value="{{confirmPassword}}" {{/if}}required>
  </div>
  <button type="submit" class="btn btn-primary mt-2">Submit</button>
  <p class="mt-4">Already have an account? Click here to <a href="/users/login">login</a></p>
</form>