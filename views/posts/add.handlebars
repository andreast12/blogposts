<h1 class="mt-3">New Post</h1>

<form action="" method="post" class="mt-4">
  <div class="form-floating mb-4">
    <input type="text" class="form-control" id="inputTitle" placeholder="dummy" name="title" required>
    <label for="inputTitle" class="form-label">Title</label>
  </div>

  <div class="form-floating mb-4">
    <textarea class="form-control" id="inputBody" placeholder="dummy" style="height: 200px;" name="body"
      required></textarea>
    <label for="inputBody" class="form-label">Body</label>
  </div>

  <div class="d-flex column-gap-3">
    <button class="btn btn-primary" type="submit"><i class="bi bi-plus-circle me-1"></i>Add</button>
    <a href="/" class="btn btn-secondary">Cancel</a>
  </div>
</form>